<div class="col s12 m6 l4">
  <div class="card">
    <div class="card-content teal accent-4 white-text">
      <p class="card-stats-title">
        <i class="material-icons middle">assignment</i> 対戦履歴</p>
      <div class="card-doing-games card-games">
        <% rooms = @rooms.select{|room| room.status == 'finished' and room.joinUser(session[:user])}%>
        <table class="teal lighten-2">
        <% rooms[0...5].each do |room| %>
          <tr>
            <td><i class="material-icons left">person</i><%= room.game_users.first.user.name %></td>
            <% if room.game_users.second.user.id != 1 %>
              <td><% colors = room.countColor %><%= "#{colors[:white]} 対 #{colors[:black]}" %></td>
              <td><i class="material-icons left">person</i><%= room.game_users.second.user.name %></td>
            <% else %>
              <td class="" colspan="2">接続切れのため負け</td>
            <% end %>
            <td><a class="black-text" href="/room/<%= room.id %>">Room<%= room.id %>へ</a></td>
          </tr>
        <% end %>
        </table>
      </div>
    </div>
    <div class="card-action teal darken-1">
      <div id="profit-tristate" class="center-align"></div>
    </div>
  </div>
</div>